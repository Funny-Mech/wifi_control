void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
    /* 确保是目标串口 (UART4) */
    if (huart->Instance == ATK_MW8266D_UART_INTERFACE)
    {

            /* 如果不是IDLE中断，说明是正常的RXNE中断，将数据存入缓冲区 */
            if (g_uart_rx_frame.sta.len < (ATK_MW8266D_UART_RX_BUF_SIZE - 1))
            {
                g_uart_rx_frame.buf[g_uart_rx_frame.sta.len] = tmp;
                g_uart_rx_frame.sta.len++;
            }
            else
            {
                /* 缓冲区溢出，则覆盖旧数据 */
                g_uart_rx_frame.sta.len = 0;
                g_uart_rx_frame.buf[g_uart_rx_frame.sta.len] = tmp;
                g_uart_rx_frame.sta.len++;
            }
        

        /* 重新使能UART接收中断，准备接收下一个字节 */
        HAL_UART_Receive_IT(huart, &tmp, 1);
    }
}

void UART4_IRQHandler(void)
{
  /* USER CODE BEGIN UART4_IRQn 0 */
    if (__HAL_UART_GET_FLAG(&huart4, UART_FLAG_IDLE) != RESET)
    {
        __HAL_UART_CLEAR_IDLEFLAG(&huart4); // 清除标志，否则会不停进中断
        g_uart_rx_frame.sta.finsh = 1;      // 设置完成标志
    }
  /* USER CODE END UART4_IRQn 0 */
  HAL_UART_IRQHandler(&huart4);
  /* USER CODE BEGIN UART4_IRQn 1 */

  /* USER CODE END UART4_IRQn 1 */
}
